<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_bg_corner"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingHorizontal="51dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".CreateTaskFragment">


    <EditText
        android:id="@+id/taskEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg"
        android:hint="task"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_bg"
            android:drawableEnd="@drawable/calendar"
            android:drawableTint="#A7A0A0"
            android:paddingEnd="7dp"
            android:text="19.08.2022" />

        <Button
            android:id="@+id/btn_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/rectangle_bg"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:drawableTint="#A7A0A0"
            android:paddingEnd="12dp"
            android:text="Каждый день"
            android:textAllCaps="false" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_bg_solid"
        android:paddingHorizontal="16dp"
        android:text="Принять"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />


</LinearLayout>